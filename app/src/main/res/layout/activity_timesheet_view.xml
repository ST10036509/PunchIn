<!-- Page Layout -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TimesheetViewActivity">


    <!-- Header NavBar -->
    <include
        android:id="@+id/include"
        layout="@layout/header_navbar_with_settings_layout" />
    <!-- Footer NavBar -->
    <include
        android:id="@+id/include2"
        layout="@layout/footer_navbar_layout"
        tools:layout_editor_absoluteY="619dp" />

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTimesheet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-20dp"
        android:clickable="true"
        android:background="@drawable/fab_button"
        app:layout_constraintBottom_toTopOf="@id/include2"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Weekly Selector -->
    <LinearLayout
        android:id="@+id/ll_WeeklySelector"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_wrapper_light_blue"
        android:elevation="2dp"
        android:minHeight="45dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include">

        <Button
            android:id="@+id/btnPreviousWeek"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/empty_navigation_button"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tvWeeklySelector"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/reglo_bold"
            android:text="@string/weekly_selection_text"
            android:textAlignment="center"
            android:textColor="#14306A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNextWeek"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/empty_navigation_button"
            android:scaleX="-1"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>

    <!-- Timesheet Viewing -->
    <LinearLayout
        android:id="@+id/ll_Timesheet_Viewing"
        android:layout_width="377dp"
        android:layout_height="499dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_WeeklySelector"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="175dp">


        <TextView
            android:id="@+id/tv_timesheet_recent_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/reglo_bold"
            android:text="@string/date_most_recent_text"
            android:textColor="#14306A" />

        <LinearLayout
            android:id="@+id/ll_Timesheet_Recent_Views"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rectangle_wrapper_white_round_corners"
            android:elevation="2dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_timesheet_recent_date">


            <LinearLayout
                android:id="@+id/ll_Timesheet_View_1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_wrapper_white_round_corners"
                android:elevation="2dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ll_Timesheet_Recent_Views">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Timesheet_View_2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_wrapper_white_round_corners"
                android:elevation="2dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ll_Timesheet_Recent_Views">


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>